<h1>Cart</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">Title</th>
            <th scope="col">Units</th>
            <th scope="col">Sub-total</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <th scope="row">{{this._id}}</th>
            <td>{{this.title}}</td>
            <td>{{this.units}}</td>
            <td>${{this.sub_total}}</td>
        </tr>
        {{/each}}
        <tr>
            <th scope="row"></th>
            <td></td>
            <td>Total:</td>
            <td>${{total}}</td>
        </tr>
    </tbody>
</table>